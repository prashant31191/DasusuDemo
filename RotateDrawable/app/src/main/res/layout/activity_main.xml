<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sxq.rotatedrawable.MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:background="@drawable/box_background">

        <ImageView
            android:id="@+id/img_cd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rotate_cd" />

        <ImageView
            android:id="@+id/img_handbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rotate_handbar" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00:00" />


        <SeekBar
            android:id="@+id/seekbar_process"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:progress="0"
            tools:progress="50" />

        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            tools:text="04:00" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="12dp">

        <ImageView
            android:id="@+id/img_pre"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/select_pre" />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:src="@drawable/select_play" />

        <ImageView
            android:id="@+id/img_next"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/select_next" />
    </LinearLayout>
</LinearLayout>
